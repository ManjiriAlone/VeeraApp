{
  "name": "veera-app",
  "version": "1.0.0",
  "description": "Veera desktop application combining frontend and backend for experiments and IoT controls.",
  "main": "./backend/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.karmicnexus.veera",
    "productName": "Veera App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "backend/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "author": "Manjiri Alonee",
  "license": "MIT",
  "dependencies": {
    "electron": "^31.0.0",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  }
}
